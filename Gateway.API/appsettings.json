{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "produtosRoute": {
        "ClusterId": "produtosCluster",
        "Match": { "Path": "/api/produtos/{**catch-all}" }
      },
      "estoquesRoute": {
        "ClusterId": "estoquesCluster",
        "Match": { "Path": "/api/estoques/{**catch-all}" }
      },
      "pedidosRoute": {
        "ClusterId": "pedidosCluster",
        "Match": { "Path": "/api/pedidos/{**catch-all}" }
      },
      "faturamentosRoute": {
        "ClusterId": "faturamentosCluster",
        "Match": { "Path": "/api/faturamentos/{**catch-all}" }
      },
      "recibosRoute": {
        "ClusterId": "recibosCluster",
        "Match": { "Path": "/api/recibos/{**catch-all}" }
      }
    },
    "Clusters": {
      "produtosCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:5000/" }
        }
      },
      "estoquesCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:5001/" }
        }
      },
      "pedidosCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:53740/" }
        }
      },
      "faturamentosCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:61296/" }
        }
      },
      "recibosCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:62217/" }
        }
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=3306;database=produtosdb;uid=root;pwd=senha"
  },
  "DatabaseSettings": {
    "UseInMemoryDatabase": true
  }
}
