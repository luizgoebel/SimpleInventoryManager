{
  "UseInMemoryDatabase": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "produtosRoute": {
        "ClusterId": "produtosCluster",
        "Match": { "Path": "/api/produtos/{**catch-all}" }
      },
      "estoquesRoute": {
        "ClusterId": "estoquesCluster",
        "Match": { "Path": "/api/estoques/{**catch-all}" }
      },
      "produtosSwagger": {
        "ClusterId": "produtosCluster",
        "Match": { "Path": "/swagger/produtos/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/swagger/produtos" },
          { "PathSet": "/swagger{**catch-all}" }
        ]
      },
      "estoquesSwagger": {
        "ClusterId": "estoquesCluster",
        "Match": { "Path": "/swagger/estoques/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/swagger/estoques" },
          { "PathSet": "/swagger{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "produtosCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:5000/" }
        }
      },
      "estoquesCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:5001/" }
        }
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=3306;database=produtosdb;uid=root;pwd=senha"
  },
  "DatabaseSettings": {
    "UseInMemoryDatabase": true,
    "ConnectionString": "server=localhost;port=3306;database=produtosdb;uid=root;pwd=senha"
  }
}
