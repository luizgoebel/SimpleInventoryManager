{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "produtosRoute": {
        "ClusterId": "produtosCluster",
        "Match": { "Path": "/api/produtos/{**catch-all}" }
      },
      "estoquesRoute": {
        "ClusterId": "estoquesCluster",
        "Match": { "Path": "/api/estoques/{**catch-all}" }
      },
      "pedidosRoute": {
        "ClusterId": "pedidosCluster",
        "Match": { "Path": "/api/pedidos/{**catch-all}" }
      }
    },
    "Clusters": {
      "produtosCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:5000/" }
        }
      },
      "estoquesCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:5001/" }
        }
      },
      "pedidosCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:53740/" }
        }
      }
    }
  }
}
